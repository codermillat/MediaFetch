{
  "name": "MediaFetch Telegram Bot",
  "description": "A production-ready Telegram bot for downloading media from various platforms",
  "repository": "https://github.com/codermillat/MediaFetch",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["telegram", "bot", "media", "download", "youtube", "tiktok", "instagram"],
  "env": {
    "ENVIRONMENT": {
      "description": "Environment (production/development)",
      "value": "production",
      "required": false
    },
    "TELEGRAM_BOT_TOKEN": {
      "description": "Your Telegram bot token from @BotFather",
      "required": true
    },
    "SUPABASE_URL": {
      "description": "Your Supabase project URL",
      "required": true
    },
    "SUPABASE_ANON_KEY": {
      "description": "Your Supabase anonymous key",
      "required": true
    },
    "SUPABASE_SERVICE_ROLE_KEY": {
      "description": "Your Supabase service role key",
      "required": true
    },
    "INSTAGRAM_USERNAME": {
      "description": "Instagram bot username",
      "value": "mediafetchbot",
      "required": false
    },
    "INSTAGRAM_PASSWORD": {
      "description": "Instagram bot password",
      "required": true
    },
    "LOG_LEVEL": {
      "description": "Logging level (DEBUG/INFO/WARNING/ERROR)",
      "value": "INFO",
      "required": false
    },
    "MAX_FILE_SIZE": {
      "description": "Maximum file size in bytes (default: 50MB)",
      "value": "52428800",
      "required": false
    },
    "DOWNLOAD_TIMEOUT": {
      "description": "Download timeout in seconds",
      "value": "300",
      "required": false
    },
    "MAX_RETRIES": {
      "description": "Maximum download retries",
      "value": "3",
      "required": false
    },
    "CLEANUP_INTERVAL": {
      "description": "Cleanup interval in seconds",
      "value": "300",
      "required": false
    },
    "HEALTH_CHECK_INTERVAL": {
      "description": "Health check interval in seconds",
      "value": "30",
      "required": false
    },
    "RATE_LIMIT_PER_USER": {
      "description": "Rate limit per user per hour",
      "value": "10",
      "required": false
    },
    "SECRET_KEY": {
      "description": "Secret key for Flask sessions",
      "generator": "secret",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic",
      "description": "Web server for health checks and metrics"
    },
    "worker": {
      "quantity": 1,
      "size": "basic",
      "description": "Background worker for file processing"
    },
    "telegram": {
      "quantity": 1,
      "size": "basic",
      "description": "Telegram bot service"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    },
    {
      "plan": "papertrail:choklad",
      "as": "LOGGING"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    }
  ],
  "scripts": {
    "postdeploy": "python -c 'from database_schema import *; create_tables()'"
  }
}
